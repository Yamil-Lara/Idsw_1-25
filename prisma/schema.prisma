generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id      Int      @id @default(autoincrement())
  name    String
  email   String   @unique
  rentals Rental[]
}

model Vehicle {
  id           Int      @id @default(autoincrement())
  model        String
  brand        String
  pricePerDay  Float
  availability Boolean
  imageUrl     String
  rentals      Rental[]
}

model Rental {
  id        Int     @id @default(autoincrement())
  userId    Int
  vehicleId Int
  rating    Float
  user      User    @relation(fields: [userId], references: [id])
  vehicle   Vehicle @relation(fields: [vehicleId], references: [id])
}
