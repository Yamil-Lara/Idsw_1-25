generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum MetodoPago {
  QR
  TARJETA_DEBITO
}

model Pago {
  id           Int         @id @default(autoincrement())
  rentalId     Int
  monto        Decimal     @db.Decimal(10, 2)
  fechaPago    DateTime    @default(now())
  metodoPago   MetodoPago
  referencia   String     @unique
  comprobante  String
}

